<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">New Place</h1>
  <div class="col-6 offset-3">
    <form action="/places" method="POST" novalidate class="needs-validation">
      <div>
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="place[title]"
          required
        />
      </div>
      <div>
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="place[location]"
          required
        />
      </div>
      <div>
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="place[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">â‚¹</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            name="place[price]"
            required
          />
        </div>
      </div>
      <div>
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="place[description]"
          required
        />
      </div>
      <button class="my-2 btn-success">Add New PLace</button>
    </form>
    <a href="/places">All Placess</a>
  </div>
</div>

<script>
  (function () {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
