<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">New Place</h1>
  <div class="col-6 offset-3">
    <form action="/places/<%= place._id %>?_method=PUT" method="POST">
      <div>
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="place[title]"
          value="<%= place.title%>"
        />
      </div>
      <div>
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="place[location]"
          value="<%= place.location%>"
        />
      </div>
      <div>
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="place[image]"
          value="<%= place.image%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">â‚¹</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            name="campground[price]"
            value="<%= place.price%>"
          />
        </div>
      </div>
      <div>
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="place[description]"
          value="<%= place.description%>"
        />
      </div>
      <button class="my-2 btn-info">Edit PLace</button>
    </form>
    <a href="/places/<%=place._id%>">Back</a>
  </div>
</div>
